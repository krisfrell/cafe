<section class="home-slider owl-carousel">

      <div class="slider-item" style="background-image: url(images/background.png);" data-stellar-background-ratio="0.5">
      	<div class="overlay"></div>
        <div class="container">
          <div class="row slider-text justify-content-center align-items-center">

            <div class="col-md-7 col-sm-12 text-center ftco-animate">
            	<h1 class="mb-3 mt-5 bread">Корзина</h1>
	            <p class="breadcrumbs"><span class="mr-2"><a href="/">На главную</a></span></p>
            </div>

          </div>
        </div>
      </div>
    </section>
<div class="container">
{{#if products}}

<div class="row">
    			<div class="col-md-12 ftco-animate">
    				<div class="cart-list">
	    				<table class="table">
						    <thead class="thead-primary">
						      <tr class="text-center">
						        <th>&nbsp;</th>
						        <th>&nbsp;</th>
						        <th>Наименование</th>
						        <th>Цена</th>
						        <th>Количество</th>
						        <th>Всего</th>
						      </tr>
						    </thead>
						    <tbody>
						    {{#each products}}
						      <tr class="text-center">
						        <td class="product-remove">
						            <a href="/remove/{{this.item._id}}">
						                <span class="icon-minus"></span>
						            </a>
						            <a href="/reduce/{{this.item._id}}">
						                <span class="icon-close"></span>
                                    </a>
                                </td>


						        <td class="image-prod">
						            <!--<img scr="{{this.imagePath}}">-->
						            <!--<img scr="{{this.item.imagePath}}">-->
						            <!--<div class="img" style="background-image:url({{this.item.imagePath}});">-->
						        </div></td>

						        <td class="product-name">
						        	<h3>{{this.item.title}}</h3>
						        </td>

						        <td class="price">{{this.item.price}}</td>

						        <td class="quantity">
						        	<!--<div class="input-group mb-3">
					             	<input type="text" name="quantity" class="quantity form-control input-number" value="{{this.qty}}">
					          	</div>-->
					          	{{this.qty}}
					          </td>

						        <td class="total">{{this.price}}</td>
						      </tr><!-- END TR-->
						      {{/each}}
						    </tbody>
						  </table>
					  </div>
    			</div>
    		</div>

<div class="container">
    <div class="row justify-content-end">
        <div class="col col-lg-3 col-md-6 mt-5 cart-wrap ftco-animate">
            <div class="cart-total mb-3">

                <p class="d-flex">
    			    <span>Сумма</span>
    			    <span>{{totalPrice}}</span>
    			</p>
    			<p class="d-flex">
    			    <span>Доставка</span>
    			    {{#lt totalPrice 1000}}
    			    <span>99</span>
    			    {{/lt}}
    			    {{#gte totalPrice 1000}}
    			    <span>0</span>
    			    {{/gte}}
    			</p>
                <p class="d-flex total-price">
                    <h3>Общая сумма</h3>
                    <span>{{commonPrice}}</span>
                </p>
            </div>
            <p class="text-center">
                <a href="/checkout" class="btn btn-primary py-3 px-4">Оформить заказ</a>
            </p>
        </div>
    </div>
</div>

{{else}}

<section>
<div class="container"
<div class="row">
    <h2>Корзина пуста</h2>
</div>
</div>
</section>

{{/if}}
